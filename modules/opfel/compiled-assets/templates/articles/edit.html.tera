<!DOCTYPE html>
<head>
  <title>Kiwi</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Kiwi</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link active" aria-current="page" href="/">Home</a>
        <a class="nav-link" href="/table">Liste</a>
        <a class="nav-link" href="/new">Neu</a>
      </div>
    </div>
  </div>
</nav>
<br>
<form action="/edit" method="post">
  <div class="mb-3">
    <label for="p_id" class="form-label">ID</label>
    <input type="text" class="form-control" name="id" p_id="p_id" value={{ article.p_id }}>
  </div>
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" name="name" id="name" value={{ article.name }}>
  </div>
  <div class="mb-3">
    <label for="chair" class="form-label">Lehrstuhl</label>
    <input type="text" class="form-control" name="chair" id="chair" value={{ article.chair }}>
  </div>
  <div class="form-check">
  <label class="form-label" for="active">Activ?</label>
  <input class="form-check-input" type="checkbox" name="active" value="true" id="active" {% if article.active%}checked{% endif %}>
</div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
<br><br>
{% if article %}
<form action="/delete" method="post">
<input type="hidden" id="id" name="id" value={{ article.id }} />
<button type="submit" class="btn btn-secondary">LÃ¶schen</button>
</form>
{% endif %}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

